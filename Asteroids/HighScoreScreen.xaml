<Page x:Class="Asteroids.HighScoreScreen"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Asteroids"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="960"
      Title="StartScreen" Foreground="{x:Null}">
    <Page.Background>
        <ImageBrush ImageSource="images\Stars.png" Stretch="UniformToFill"/>
    </Page.Background>

    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="377,0,404,0" TextWrapping="Wrap" Text="Highscores" VerticalAlignment="Top" Height="45" Width="179" Foreground="White" FontSize="36" TextDecorations="{x:Null}" FontFamily="Bauhaus 93">
            <TextBlock.Background>
                <ImageBrush/>
            </TextBlock.Background>
        </TextBlock>
        <Button x:Name="button" Content="Exit" HorizontalAlignment="Center" Margin="430,0,465,0" VerticalAlignment="Bottom" Width="65" Height="53" Foreground="White" BorderBrush="Black" FontSize="36" Click="Button_Click" FontFamily="Bauhaus 93">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
    </Grid>
</Page>
