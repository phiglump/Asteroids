        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black">
        <Button x:Name="Start" Content="START" HorizontalAlignment="Center" Margin="292,243,297,0" VerticalAlignment="Top" Width="203" Height="35" Background="#FF0F0101" Foreground="White" BorderBrush="Black" FontSize="24" Click="Button_Click"/>
