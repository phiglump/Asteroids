<Page x:Class="Asteroids.GameScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Asteroids"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GameScreen"
      FocusManager.FocusedElement="{Binding ElementName=MyCanvas}">

    <Grid Background="Black">
        <Canvas Name="MyCanvas" KeyDown="Canvas_KeyDown" Focusable="True" >

            <Rectangle Name="rec1" Width="50" Height="50" Margin="0" Canvas.Left="10" Canvas.Top="10">
                <Rectangle.RenderTransform>
                    <RotateTransform CenterX="0" CenterY="0" Angle="0" />
                </Rectangle.RenderTransform>

                <Rectangle.Fill>
                    <SolidColorBrush Color="BlueViolet" />
                </Rectangle.Fill>

            </Rectangle>

        </Canvas>
    </Grid>
</Page>
