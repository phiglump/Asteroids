<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Asteroids"
      xmlns:Properties="clr-namespace:Asteroids.Properties" x:Class="Asteroids.GameScreen"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="960"
      Title="GameScreen" Foreground="{x:Null}" FocusManager.FocusedElement="{Binding ElementName=MyCanvas}">

    <Grid Background="Black">
        <Canvas x:Name="MyCanvas" Focusable="True" >
            <Canvas.Background>
                <ImageBrush ImageSource="images\Stars.png"/>
            </Canvas.Background>
            <Rectangle x:Name="rec1" Focusable ="True" Width="50" Height="50" Margin="0" Canvas.Left="451" Canvas.Top="398" >
                <Rectangle.Fill>
                    <ImageBrush ImageSource="images\ThisIsTheSpaceShipImage.png" Stretch="UniformToFill" />
                </Rectangle.Fill>
                <Rectangle.RenderTransform>
                    <RotateTransform CenterX="0" CenterY="0" Angle="0" />
                </Rectangle.RenderTransform>
            </Rectangle>
            <Rectangle x:Name="asteroid" Focusable ="True" Width="50" Height="50" Margin="0" Canvas.Left="10" Canvas.Top="10" >
                <Rectangle.Fill>
                    <ImageBrush ImageSource="images\Asteroid3.gif" Stretch="UniformToFill" />
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle x:Name="asteroid1" Focusable ="True" Width="50" Height="50" Margin="0" Canvas.Left="100" Canvas.Top="100" >
                <Rectangle.Fill>
                    <ImageBrush ImageSource="images\Asteroid3.gif" Stretch="UniformToFill" />
                </Rectangle.Fill>
            </Rectangle>
            <TextBlock x:Name="Scores" Canvas.Left="10" TextWrapping="Wrap" Text="SCORE" Canvas.Top="10" Foreground="White" Height="27" Width="61" FontSize="20">
                <TextBlock.Background>
                    <ImageBrush/>
                </TextBlock.Background>
            </TextBlock>
            <TextBlock x:Name="Lives" Canvas.Left="121" TextWrapping="Wrap" Text="LIVES" Canvas.Top="10" Foreground="White" Height="27" Width="49" FontSize="20">
                <TextBlock.Background>
                    <ImageBrush/>
                </TextBlock.Background>
            </TextBlock>
            <Image Source="images\ThisIsTheSpaceShipImage.png" Height="27" Width="21" Canvas.Left="100" Canvas.Top="37"></Image>
            <TextBlock x:Name="scoredisplayed" Canvas.Left="10" TextWrapping="Wrap" Text="    0" Canvas.Top="37" Foreground="White" Height="27" Width="61" FontSize="20">
                <TextBlock.Background>
                    <ImageBrush/>
                </TextBlock.Background>
            </TextBlock>
            <Image Source="images/ThisIsTheSpaceShipImage.png" Height="27" Width="21" Canvas.Left="121" Canvas.Top="37"/>
            <Image Source="images/ThisIsTheSpaceShipImage.png" Height="27" Width="21" Canvas.Left="142" Canvas.Top="37"/>
            <Image Source="images/ThisIsTheSpaceShipImage.png" Height="27" Width="21" Canvas.Left="163" Canvas.Top="37"/>
        </Canvas>
    </Grid>
</Page>


